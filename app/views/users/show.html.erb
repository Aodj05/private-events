<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<div class = "container">
 <h1 class = "centered-text" > <%= @user.name %></h1>

 <section>
   <h2 class = "event-list">Upcoming Events</h2>

   <section class = "event-list">
     <% @user.event_attendances.upcoming.each do |event| %>
       <%= render partial: "card", locals: { event: event} %>
     <% end %>
    </section>
  </section>

  <hr>
  <section>
    <h2 class="centered-text">Previously Attended Events</h2>

    <section class="event-list">
      <% @user.attended_events.past.each do |event| %>
        <%= render partial: "events/card", locals: { event: event } %>
      <% end %>
    </section>
  </section>
