<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, class: 'event-title-input' %>
  </div>

  <div id = "event-info-field" class = "field">
    <%= form.label :information %>
    <%= form.text_area :information %>
  </div>

  <div class = "field">
    <%= form.label :date %>
    <%= form.date_field %>
  </div>
   

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
